<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_button_grey"
    android:clickable="true"
    android:focusable="true">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/source_code_pro_medium"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="120dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="mdmn kvkfjnvfvfkjvfvnjfkvnfvfkjjvfnvfkjvnfk flnvkffjknvkfvn flvfn" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_toEndOf="@id/text"
        android:layout_marginStart="-110dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/grey"
        android:textSize="12sp"
        tools:text="@string/app_name" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/text"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/background_line_grey"/>
</RelativeLayout>