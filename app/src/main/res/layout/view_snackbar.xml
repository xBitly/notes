<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_snackbar">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:paddingStart="30dp"
        android:paddingEnd="0dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/the_note_has_been_deleted"
        android:fontFamily="@font/source_code_pro_medium"/>
    <RelativeLayout
        android:id="@+id/button_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_button_blue_snack"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="15dp"
        android:layout_centerVertical="true"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/text_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/undo"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>